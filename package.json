{
  "name": "bekrin.me",
  "version": "2.1.0",
  "description": "Source code of bekrin.me",
  "homepage": "http://bekrin.me",
  "repository": "https://github.com/sbekrin/bekrin.me",
  "author": "Sergey Bekrin <sergey@bekrin.me>",
  "license": "UNLICENSED",
  "scripts": {
    "now-build": "yarn lint && next build && next export -o dist",
    "lint": "eslint .",
    "dev": "next"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "babel-plugin-root-import": "^6.4.1",
    "babel-plugin-styled-components": "^1.10.7",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.7",
    "moment": "^2.24.0",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "webpack": "4.41.6"
  },
  "dependencies": {
    "next": "^9.2.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-ga": "^2.7.0",
    "styled-components": "^5.0.1"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "styled-components",
      "root-import"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
